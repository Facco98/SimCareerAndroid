<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/profile_toolbar_text"
            style="@style/AppBar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:text="@string/profile_lbl_start"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/profile_lbl_start"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/topAppBar"
            style="@style/lbl_welcome"
    />
    <com.google.android.material.button.MaterialButton
            style="@style/SimCareerButton"
            android:id="@+id/profile_btn_login"
            android:text="@string/main_btn_login_text"
            android:layout_height="wrap_content" android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/profile_lbl_start"
            app:layout_constraintEnd_toEndOf="@+id/profile_lbl_start" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/profile_lbl_start" android:layout_marginTop="40dp"
            app:backgroundTint="@android:color/holo_red_light" app:iconTint="@android:color/holo_orange_dark"/>

    <com.google.android.material.button.MaterialButton
            style="@style/SimCareerButton"
            android:id="@+id/profile_btn_register"
            android:text="@string/main_btn_login_text"
            android:layout_height="wrap_content" android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/profile_lbl_start"
            app:layout_constraintEnd_toEndOf="@+id/profile_lbl_start" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/profile_btn_login" android:layout_marginTop="40dp"
            app:backgroundTint="@android:color/holo_red_light" app:iconTint="@android:color/holo_orange_dark"/>



</androidx.constraintlayout.widget.ConstraintLayout>