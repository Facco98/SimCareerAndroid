<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">


    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            style="@style/AppBar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:text="@string/main_activity_lbl_welcome"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/main_lbl_welcome"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/topAppBar"
            style="@style/lbl_welcome"
    />
    <com.google.android.material.button.MaterialButton
            style="@style/SimCareerButton"
            android:id="@+id/main_btn_login"
            android:text="@string/main_btn_login_text"
            android:layout_height="wrap_content" android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/main_lbl_welcome"
            app:layout_constraintEnd_toEndOf="@+id/main_lbl_welcome" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/main_lbl_welcome" android:layout_marginTop="40dp"
            app:backgroundTint="@android:color/holo_red_light" app:iconTint="@android:color/holo_orange_dark"/>

    <TextView android:layout_width="93dp" android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="@+id/main_btn_login"
              app:layout_constraintEnd_toEndOf="@+id/main_btn_login"
              app:layout_constraintTop_toBottomOf="@+id/main_btn_login" android:id="@+id/main_lbl_oppure"
              android:layout_marginTop="30dp" android:text="@string/or" style="@style/lbl_info">

    </TextView>

    <com.google.android.material.button.MaterialButton
            style="@style/SimCareerButton"
            android:id="@+id/main_btn_register"
            android:text="@string/main_btn_register_text" android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/main_btn_login"
            app:layout_constraintEnd_toEndOf="@+id/main_btn_login"
            app:layout_constraintTop_toBottomOf="@+id/main_lbl_oppure" android:layout_marginTop="30dp"/>

    <TextView android:layout_width="93dp" android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="@+id/main_btn_login"
              app:layout_constraintEnd_toEndOf="@+id/main_btn_login"
              app:layout_constraintTop_toBottomOf="@+id/main_btn_register" android:id="@+id/main_lbl_oppure2"
              android:layout_marginTop="30dp" android:text="@string/or" style="@style/lbl_info">

    </TextView>

    <com.google.android.material.button.MaterialButton
            style="@style/SimCareerButton"
            android:id="@+id/main_btn_guest"
            android:text="@string/main_btn_guest_text" android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/main_btn_login"
            app:layout_constraintEnd_toEndOf="@+id/main_btn_login"
            app:layout_constraintTop_toBottomOf="@+id/main_lbl_oppure2" android:layout_marginTop="30dp"
    />


</androidx.constraintlayout.widget.ConstraintLayout>