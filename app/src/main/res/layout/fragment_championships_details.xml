<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            style="@style/AppBar"
            app:title="@string/championships_details_app_bar_title"
            app:layout_constraintTop_toTopOf="parent"
    />

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/championship_details_tabs"
            app:layout_constraintTop_toBottomOf="@id/topAppBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill"
    />

    <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/championship_details_tabs"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/championship_details_pager"
    />
</androidx.constraintlayout.widget.ConstraintLayout>